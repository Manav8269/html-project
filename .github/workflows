name: Test Popup

on: [push]

jobs:
  notify:
    runs-on: ubuntu-latest
    steps:
      - name: Show Notice (echo)
        run: echo "::notice title=Hello World::ðŸŽ‰ This is a test notice!"

      - name: Show Notice (core)
        uses: actions/github-script@v7
        with:
          github-token: ${{ secrets.GITHUB_TOKEN }}
          script: |
            const core = require('@actions/core');
            core.notice('ðŸŽ‰ GitHub Script Notice Works!', { title: 'Success Notice' });
